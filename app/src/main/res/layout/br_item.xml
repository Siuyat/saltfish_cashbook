<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/qianhui"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp">
            <TextView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:id="@+id/cycle_isborrow"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="入"
                android:gravity="center"
                android:background="@drawable/shape3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="20sp"
                app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/his_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三→我"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toRightOf="@+id/cycle_isborrow"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="15sp" />
                <TextView
                    android:id="@+id/comments_view_br"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/his_name"
                    app:layout_constraintLeft_toRightOf="@+id/cycle_isborrow"
                    android:layout_marginLeft="15sp"
                    android:text="买水"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/date_view_br"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-29"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments_view_br"
                    app:layout_constraintLeft_toRightOf="@+id/cycle_isborrow"
                    android:layout_marginLeft="15sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_weight="1" />

            <TextView
                android:id="@+id/money_br_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/money_re"
                android:textSize="30sp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/money_re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已收"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20sp"
                app:layout_constraintTop_toBottomOf="@+id/money_br_t"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>

