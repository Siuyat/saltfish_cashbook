<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12sp"
    android:paddingBottom="12sp"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/type_image"
                android:text="收"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/shape5"
                android:layout_width="50sp"
                android:layout_height="50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/type_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10sp"
                android:text="居家生活"
                android:textSize="18sp"
                android:id="@+id/type_name"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/type_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="3sp"
                android:text="物业水电煤"
                android:textSize="15sp"
                android:id="@+id/subtype_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/type_name"
                    app:layout_constraintLeft_toRightOf="@+id/type_image"
                    android:layout_marginLeft="10sp"
                    android:text="date"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/date_search_tv"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@+id/date_search_tv"
                    app:layout_constraintTop_toBottomOf="@+id/type_name"
                    android:layout_marginLeft="10sp"
                    android:text="备注：便当"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/comment"/>


            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/cost"
                android:text="111"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10sp"
                android:layout_width="wrap_content" />


        </android.support.constraint.ConstraintLayout>

</LinearLayout>