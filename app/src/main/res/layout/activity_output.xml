<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/dusk_ver"
    android:id="@+id/output_ll"
    tools:context="com.example.ruanx.cashbook.OutputActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/opcs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back_from_output"
            android:layout_width="30sp"
            android:layout_height="30sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10sp"
            android:background="@mipmap/back"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出账单"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/whiteopa"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/back_from_pie"
            app:layout_constraintTop_toTopOf="@+id/back_from_pie"
            app:layout_constraintLeft_toLeftOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/output_double_date_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opcs1"
        android:text="请选择导出时间段"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/output_ok_btn"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/output_ok_btn"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/output_double_date_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:textColor="@color/whiteopa"
        android:background="#00000000"
        android:text="确认"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
