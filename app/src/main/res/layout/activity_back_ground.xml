<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/darksky_ver"
    android:layout_width="match_parent"
    android:id="@+id/bgact_constraintlayout"
    android:layout_height="match_parent"
    tools:context="com.example.ruanx.cashbook.BackGroundActivity">

    <Button
        android:id="@+id/bg_ok"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10sp"
        android:background="@mipmap/ok"
        android:layout_width="30sp"
        android:layout_height="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="选择主题"
        android:textStyle="bold"
        android:textColor="@color/whiteopa"
        app:layout_constraintTop_toTopOf="@id/bg_back"
        app:layout_constraintBottom_toBottomOf="@id/bg_back"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bg_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10sp"
        android:textColor="@color/whiteopa"
        android:background="@mipmap/back"
        android:layout_width="30sp"
        android:layout_height="30sp" />


        <Button
            android:id="@+id/bg_album"
            android:text="从相册中选择 >"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/bg_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:background="#00000000"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <android.support.constraint.Guideline
        android:id="@+id/guide_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide2_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/bg_1"
        android:layout_width="130sp"
        android:layout_height="130sp"
        app:layout_constraintRight_toRightOf="@+id/guide2_bg"
        app:layout_constraintBottom_toBottomOf="@+id/guide_bg"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"
        android:background="@mipmap/darksky_square"/>

    <Button
        android:id="@+id/bg_2"
        android:layout_width="130sp"
        android:layout_height="130sp"
        app:layout_constraintLeft_toLeftOf="@+id/guide2_bg"
        app:layout_constraintBottom_toBottomOf="@+id/guide_bg"
        android:background="@mipmap/forest_square"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="20sp"/>

    <Button
        android:id="@+id/bg_3"
        android:layout_width="130sp"
        android:layout_height="130sp"
        app:layout_constraintRight_toRightOf="@+id/guide2_bg"
        app:layout_constraintTop_toBottomOf="@+id/guide_bg"
        android:background="@mipmap/dusk_square"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20sp"/>

    <Button
        android:id="@+id/bg_4"
        android:layout_width="130sp"
        android:layout_height="130sp"
        app:layout_constraintTop_toBottomOf="@+id/guide_bg"
        app:layout_constraintLeft_toRightOf="@+id/guide2_bg"
        android:background="@mipmap/map_square"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"/>

</android.support.constraint.ConstraintLayout>
